          <script>
            document.addEventListener('DOMContentLoaded', () => {
              const profileLogo = document.getElementById('profile-logo');
              const menu = document.getElementById('menu');

              // Show menu on click
              profileLogo.addEventListener('click', (event) => {
                event.preventDefault(); // Prevent any default behavior (just in case)

                // Toggle the menu visibility
                if (menu.style.display === 'none' || menu.style.display === '') {
                  menu.style.display = 'block';
                } else {
                  menu.style.display = 'none';
                }
              });

              // Hide menu when clicking anywhere else
              document.addEventListener('click', (event) => {
                if (!menu.contains(event.target) && event.target !== profileLogo) {
                  menu.style.display = 'none'; // Hide the menu if clicking outside of it
                }
              });
            });
          </script>
