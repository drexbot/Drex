    </head>
    <body>

<div class="wrapper">
  
    <%- include('../include/sidemenu'); -%>

    <!-- Settings -->
    <%- include('../include/header'); -%>

        <section class="content">
        <div class="overview-all">

        <h1>Control Punishment</h1>
        <hr style="width: 90%; margin: 20px auto;">
        <form method="POST">
          <button type="submit" class="btn btn-save">
              <i class="fas fa-save"></i>
          </button>
        <div class="row mt-3" style="justify-content: center;">
          <div class=" col-md-6 my-1 cart_mod">
                <div class="">
                    <div style="position: relative;">
                        <h5 class="text-light feature-title" style="text-align: left; margin-top: 5px;" style="left: 0; position: absolute;">Channels Action :</h5>
                    </div>
                </div>
                <hr>
                <select class="input form-select" data-width="100%" data-live-search="true" aria-label="action" name="actionChannels" >
                  <option value="none" <%= action.channels == "none" || !action.channels ? "selected" : "" %>> None </option>
                  <option value="roles" <%= action.channels == "roles" ? "selected" : "" %>> Remove Roles </option>
                  <option value="kick" <%= action.channels == "kick" ? "selected" : "" %>> Kick Member </option>
                  <option value="ban" <%= action.channels == "ban" ? "selected" : "" %>> Ban Member </option>
                </select>
                <p />
            </div>
          <div class=" col-md-6 my-1 cart_mod">
                <div class="">
                    <div style="position: relative;">
                        <h5 class="text-light feature-title" style="text-align: left; margin-top: 5px;" style="left: 0; position: absolute;">Roles Action :</h5>
                    </div>
                </div>
                <hr>
                <select class="input form-select" data-width="100%" data-live-search="true" aria-label="action" name="actionRoles" >
                  <option value="none" <%= action.roles == "none" || !action.roles ? "selected" : "" %>> None </option>
                  <option value="roles" <%= action.roles == "roles" ? "selected" : "" %>> Remove Roles </option>
                  <option value="kick" <%= action.roles == "kick" ? "selected" : "" %>> Kick Member </option>
                  <option value="ban" <%= action.roles == "ban" ? "selected" : "" %>> Ban Member </option>
                </select>
                <p />
            </div>
          <div class=" col-md-6 my-1 cart_mod">
                <div class="">
                    <div style="position: relative;">
                        <h5 class="text-light feature-title" style="text-align: left; margin-top: 5px;" style="left: 0; position: absolute;">Ban Action :</h5>
                    </div>
                </div>
                <hr>
                <select class="input form-select" data-width="100%" data-live-search="true" aria-label="action" name="actionBan" >
                  <option value="none" <%= action.bans == "none" || !action.bans ? "selected" : "" %>> None </option>
                  <option value="roles" <%= action.bans == "roles" ? "selected" : "" %>> Remove Roles </option>
                  <option value="kick" <%= action.bans == "kick" ? "selected" : "" %>> Kick Member </option>
                  <option value="ban" <%= action.bans == "ban" ? "selected" : "" %>> Ban Member </option>
                </select>
                <p />
            </div>
          <div class=" col-md-6 my-1 cart_mod">
                <div class="">
                    <div style="position: relative;">
                        <h5 class="text-light feature-title" style="text-align: left; margin-top: 5px;" style="left: 0; position: absolute;">Kick Action :</h5>
                    </div>
                </div>
                <hr>
                <select class="input form-select" data-width="100%" data-live-search="true" aria-label="action" name="actionKick" >
                  <option value="none" <%= action.kicks == "none" || !action.kicks ? "selected" : "" %>> None </option>
                  <option value="roles" <%= action.kicks == "roles" ? "selected" : "" %>> Remove Roles </option>
                  <option value="kick" <%= action.kicks == "kick" ? "selected" : "" %>> Kick Member </option>
                  <option value="ban" <%= action.kicks == "ban" ? "selected" : "" %>> Ban Member </option>
                </select>
                <p />
            </div>
        </div>
        </form>
        </section>     
        <!-- Welcome -->
</div>
